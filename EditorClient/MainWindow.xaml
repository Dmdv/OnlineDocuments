<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="EditorClient.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.09*"/>
    		<RowDefinition Height="0.91*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0.291*"/>
    		<ColumnDefinition Width="0.709*"/>
    	</Grid.ColumnDefinitions>
    	<Menu Grid.ColumnSpan="2"/>
    	<ListView VerticalContentAlignment="Top" Grid.Row="1">
    		<ListView.View>
    			<GridView>
    				<GridViewColumn/>
    			</GridView>
    		</ListView.View>
    	</ListView>
    	<RichTextBox Grid.Column="1" Grid.Row="1">
    		<FlowDocument>
    			<Paragraph><Run Text="RichTextBox"/></Paragraph>
    		</FlowDocument>
    	</RichTextBox>
        
    </Grid>
</Window>
